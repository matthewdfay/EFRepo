<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elementalfoundry.tapclips.TermsAndConditionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_logo"
                android:scaleType="centerCrop"
                android:background="@null"
                android:layout_gravity="center_horizontal"
                />
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TapClips"
            android:textColor="#00AB66"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only the Highlights"
            android:textSize="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="30"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By using this app you are accepting our"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="5"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="5"
            android:orientation="horizontal">
            <Button
                android:id="@+id/termsAndConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="terms and conditions"
                android:textColor="#00AB66"
                android:textSize="15dp"
                android:background="@android:color/transparent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&amp;"
                android:textSize="15dp"
                android:textColor="#00AB66"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>
            <Button
                android:id="@+id/privacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="privacy policy"
                android:textColor="#00AB66"
                android:textSize="15dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/tcAndPDoneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_continue"
                android:scaleType="centerCrop"
                android:background="@null"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/simpleWebViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</FrameLayout>
